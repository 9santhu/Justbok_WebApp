<div class="modal-body">
    <input id="class_id" type="hidden" />
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">
                <button type="button" style="float:right;margin-top: 10px;" class="btn btn-primary btn-sm btn-flat"
                        title="Add Class Time" onclick="return ShowAddEditClassTimeView('0')">
                    <i class="glyphicon glyphicon-plus"></i> Add
                </button><br><br>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div id="tblClassTimes_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
