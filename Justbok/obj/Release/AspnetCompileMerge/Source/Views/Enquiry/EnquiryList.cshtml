<section class="content-header">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <i class="fa fa-search"></i>
                <h3 class="box-title">Search Enquiry</h3>
                <div class="form">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Search </label> <input class="form-control input-sm" placeholder="Member Name,Mobile No" aria-controls="example1" type="search" id="txtMemberNamePhone"/>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Gender </label> 
                          <select id="ddlGenderSearch" class="form-control input-sm">
                              <option>-----Select-----</option>
                              <option>Male</option>
                              <option>Female</option>
                          </select>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Filter </label> 
                            <select id="ddlFilterSearch" class="form-control input-sm">
                                <option>Enquiry Date</option>
                                <option>Next Followup Date</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>From Date </label> 
                            <input class="form-control input-sm datepicker" type="text" id="txtFromdate" />
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>To Date </label> 
                            <input class="form-control input-sm datepicker" type="text" id="txtTodate" />
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Status </label> 
                            <select id="ddlStatus" class="form-control input-sm">
                                <option>----All-----</option>
                                <option>Interested</option>
                                <option>Intrested rate problem</option>
                                <option>Joined other Gym</option>
                                <option>No reply</option>
                                <option>Not intrested</option>
                                <option>Shifted to other place</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Membership </label>
                            <select id="ddlMembership" class="form-control input-sm">
                                <option>----All-----</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Received By </label> 
                            <select id="ddlRecievedby" class="form-control input-sm">
                                <option>----All-----</option>
                            </select>
                            
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group" style="margin-top:24px;">
                            <button type="button" class="btn btn-info" id="btnSearchEnquiry">
                                <span class="glyphicon glyphicon-search"></span> Search
                            </button>
                            <button type="button" class="btn btn-default btn-sm" id="btnSearchReset">
                                <span class="glyphicon glyphicon-refresh"></span> Refresh
                            </button>
                        </div>
                        </div>

                    </div>
            </div>
        </div>
    </div>
</section>



