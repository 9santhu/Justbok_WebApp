@{
    ViewBag.Title = "CategoerySale";
}
<section class="content-header ng-scope">
    <h1>
       Category Wise Sale
        <div class="pull-right">
            <a onclick="return LoadPage('@Url.Action("Index", "Reports")','Justbok | Reports Membership');" class="btn btn-primary btn-sm btn-flat"><i class="fa fa-arrow-left"></i> Reports</a><br><br>
        </div>
    </h1>
</section>
<section class="content-header">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">Search</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <form role="form" class="ng-pristine ng-valid">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>From Date</label>
                                <input id="txtFromDate" class="form-control input-sm" type="datetime">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>To Date</label>
                                <input id="txtToDate" class="form-control input-sm" type="datetime">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group" style="margin-top:25px;">
                                <label></label>
                                <button type="button" id="btnSearch" class="btn btn-primary btn-sm btn-flat" title="Search"><i class="glyphicon glyphicon-search"></i> Search</button>
                                <button type="button" id="btnReset" class="btn btn-default btn-sm btn-flat" title="Reset"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category wise Sale Report</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

                        <div class="dataTables_length">
                            <label>
                                Show
                                <select id="tblCategoryList_length" name="tblCategoryList_length"
                                        aria-controls="tblCategoryList" class="form-control input-sm"
                                        onchange="return ShowChange();">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> entries
                            </label>
                            <div class="pull-right">
                                <img src="~/Theme/img/excel.jpg" width="30" height="30" id="dwnldExcel" />
                                <img src="~/Theme/img/pdf.png" width="30" height="30" id="dwnldPdf" />
                            </div>
                        </div>
                      
                        <div class="col-sm-12 table-responsive">
                            <table id="tblCategoryList" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 231.217px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Category</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 282.583px;" aria-label="Browser: activate to sort column ascending">Total Sale</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 143.717px;" aria-label="CSS grade: activate to sort column ascending">Sale Amount</th>
                                </thead>
                                <tbody></tbody>
                                <tfoot>

                            </table>
                            <div class="dataTables_paginate paging_simple_numbers" id="tblCategoryList_paginate">
                                <ul id="pagination" class="pagination"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


