@{
    ViewBag.Title = "Book Appointment";
}
<section class="content-header ng-scope">
    <h1>
        Book Appointments
    </h1>
</section>

<section class="content ng-scope">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="col-lg-12">
                        <div id='calendar'></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade ng-scope in" id="bookAppointment" role="dialog">
    <div class="modal-dialog" style="width:650px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="return CloseModel();" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="gridSystemModalLabel">Add Appointment Slot</h4>
            </div>
            <div id="ModalBody"></div>
        </div>
    </div>
</div>

<div class="modal fade in" id="subModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:500px;">
        <div id="subModalContent"></div>
    </div>

</div>

<div class="bootbox modal fade in" role="dialog" id="modal_Conformation">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" aria-hidden="true" onclick="return CloseConformationModel();">×</button>
                <h4 class="modal-title">Confirmation !</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body" id="Conformationbody">Are you sure you want to delete this appointment?</div>
                <input type="hidden" id="HFValue" value="0" />
            </div>
            <div class="modal-footer">
                <button data-bb-handler="success" type="button" class="btn btn-success btn-flat" id="btnYes" onclick="return YesClicked();">Yes</button>
                <button data-bb-handler="danger" type="button" class="btn btn-danger btn-flat" onclick="return CloseConformationModel();">No</button>
            </div>
        </div>
    </div>
</div>

