@{
    ViewBag.Title = "Expense Types";
}

<section class="content-header ng-scope">
    <h1>
        Expense Types
        <div class="pull-right">
            <button type="button" style="float:right;margin-top: 10px;" class="btn btn-primary btn-sm btn-flat" onclick="return ShowModel('0')" title="Add Expense Type">
                <i class="glyphicon glyphicon-plus"></i> Add
            </button><br><br>
        </div>
    </h1>
</section>

<section class="content ng-scope">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <i class="fa fa-search"></i>
                    <h3 class="box-title">Expense Type Search</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div><!-- /.box-tools -->
                </div><!-- /.box-header -->
                <div class="box-body">
                    <form role="form" class="ng-pristine ng-valid">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Name </label>
                                <input class="form-control input-sm input-sm" id="txtSearchName" placeholder="Name" title="Name" type="text" value="">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Description </label>
                                <input class="form-control input-sm input-sm" id="txtSearchDescription" placeholder="Description" title="Description" type="text" value="">
                            </div>
                        </div>
                        <div class="col-md-3" style="margin-top:25px;">
                            <div class="form-group">
                                <button type="button" id="btnSearchExp" class="btn btn-sm btn-primary btn-flat" title="Search"><i class="glyphicon glyphicon-search"></i>Search</button>
                                <button type="button" id="btnSearchClear" class="btn btn-default btn-sm btn-flat" title="Reset"><i class="glyphicon glyphicon-refresh"></i>Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Expense Types</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <div id="TBLExpenceList_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="DTTT_container"></div>
                                <div class="clear"></div>
                                <div class="dataTables_length">
                                    <label>
                                        Show
                                        <select id="TBLExpenceList_length" name="TBLExpenceList_length"
                                                aria-controls="TBLExpenceList" class="form-control input-sm"
                                                onchange="return ShowChange();">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> entries
                                    </label>
                                </div>
                                <table class="table table-bordered dataTable no-footer" id="TBLExpenceList" role="grid">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting Sortable" style="width: 150px;" onclick="SortData(this)" key="name" headerid="name" id="name">Expense Type Name</th>
                                            <th class="sorting Sortable" style="width: 170px;" onclick="SortData(this)" key="description" headerid="description" id="description">Expense Type Description</th>
                                            <th style="width: 130px;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <div class="dataTables_paginate paging_simple_numbers" id="TBLExpenceList_paginate">
                                    <ul id="pagination" class="pagination"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

<div class="modal fade ng-scope in" id="addExpenseType" role="dialog">
    <div class="modal-dialog" style="width:600px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" onclick="return HideModel('#addExpenseType'); "><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Expense Type</h4>
            </div>
            <input id="HFExpenseTypeId" class="ng-pristine ng-untouched ng-valid" type="hidden">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Expense Type Name <span class="required" aria-required="true"> * </span></label>
                            <input class="form-control input-sm ng-pristine ng-untouched ng-valid" id="txtName"
                                   tabindex="1" type="text">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Expense Type Description <span class="required" aria-required="true"> * </span></label>
                            <input class="form-control input-sm ng-pristine ng-untouched ng-valid" id="txtDescription"
                                   tabindex="2" type="text">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm btn-flat" tabindex="3" title="Save" id="btnSave">
                    <i class="glyphicon glyphicon-ok"></i> Save
                </button>
                <button type="button" class="btn btn-default btn-sm btn-flat" onclick="ClearAllRecord()" tabindex="4"
                        title="Close">
                    <i class="glyphicon glyphicon-remove"></i> Close
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<script src="~/Scripts/Navigation.js?v=1.2"></script>
    <script>
        var ExpenseTypesUrl = '@Url.Action("ExpenseTypes", "ExpenseType")';
        var ExpenseTypeDetailsByIdUrl = '@Url.Action("ExpenseTypeDetailsById", "ExpenseType")';
        var SaveExpenseTypeUrl = '@Url.Action("SaveExpenseType", "ExpenseType")';
    </script>

    <script src="~/Content/Settings/_expensetype.js?v=1.3"></script>
}
