@model Justbok.Models.EnquiryViewModel

@{
    ViewBag.Title = "NewEnquiryForm";
}

<section class="content container-fluid">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Enquiry</h3><hr />
                <div class="col-md-12">
                    @*<h5>Member basic info</h5><hr>*@
                    @using (Html.BeginForm())
                    {
                        <div class="form-group col-md-4" style="display:none;">
                            <label for="exampleInputEmail1">Enquiry Id</label>
                            @Html.TextBoxFor(model => model.EnquiryId, new { @class = "form-control", placeholder = "First Name" })
                            @Html.ValidationMessageFor(model => model.EnquiryId)
                        </div>


                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">First Name</label>
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name" })
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Last Name</label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name" })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Mobile Number</label>
                            @Html.TextBoxFor(model => model.MobileNumber, new { @class = "form-control", placeholder = "Mobile Name" })
                            @Html.ValidationMessageFor(model => model.MobileNumber)
                        </div>

                        <div class="form-group col-md-4">
                            <label>Date of Birth :</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.DOB, new { @class = "form-control pull-right", @type = "date" })
                                @Html.ValidationMessageFor(model => model.DOB)
                            </div>
                            <!-- /.input group -->
                        </div>

                        <div class="form-group col-md-4">
                            <label>Enquiry Date :</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.EnquiryDate, new { @class = "form-control pull-right", @type = "date" })
                                @Html.ValidationMessageFor(model => model.EnquiryDate)
                            </div>
                            <!-- /.input group -->
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.EmailId)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Phone No. (Resi.)</label>
                            @Html.TextBoxFor(model => model.PhoneNumberResidence, new { @class = "form-control", placeholder = "Phone(Residence)" })
                            @Html.ValidationMessageFor(model => model.PhoneNumberResidence)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Phone No. (Office)</label>
                            @Html.TextBoxFor(model => model.PhoneNumberOffice, new { @class = "form-control", placeholder = "Phone(Office)" })
                            @Html.ValidationMessageFor(model => model.PhoneNumberOffice)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Gender *</label>
                            @Html.DropDownListFor(model => model.Gender, new SelectList(new List<string> { "--Select--", "Male", "Female" }), new { @class = "form-control", placeholder = "Gender" })
                            @Html.ValidationMessageFor(model => model.Gender)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Address</label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Age</label>
                            @Html.TextBoxFor(model => model.Age, new { @class = "form-control", placeholder = "Age" })
                            @Html.ValidationMessageFor(model => model.Age)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Intention</label>
                            @Html.DropDownListFor(model => model.Intention,
                                                   new SelectList(new List<string> { "--Select--", "Body Shaping", "Weight Loss", "Weight Gain", "Body Building", "Fitness", "Sports Training" }),
                        new { @class = "form-control", placeholder = "Intention" })
                            @Html.ValidationMessageFor(model => model.Intention)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Program Suggested</label>
                            @Html.DropDownListFor(model => model.ProgramSuggested, new SelectList(ViewBag.Offers), "- Please select -", new { @class = "form-control", id = "ddlProgramSuggested" })
                            @*@Html.DropDownListFor(model => model.ProgramSuggested,
                                new SelectList(new List<string> { "--Select--", "1 month", "3 months", "premium plus", "PT", "9 month plan", "1 Year" }),
                                new { @class = "form-control", placeholder = "Program Suggested" })*@
                            @Html.ValidationMessageFor(model => model.ProgramSuggested)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Category</label>
                            @Html.DropDownListFor(model => model.Category, new SelectList(ViewBag.Categoery), "- Please select -", new { @class = "form-control", id = "ddlCategory" })
                            @Html.ValidationMessageFor(model => model.Category)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Amount Offered</label>
                            @Html.TextBoxFor(model => model.AmountOffered, new { @class = "form-control", placeholder = "Amount Offered" })
                            @Html.ValidationMessageFor(model => model.AmountOffered)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Trial Offered (Days)</label>
                            @Html.DropDownListFor(model => model.TrailOffered,
                        new SelectList(new List<string> { "--Select--", "1", "2", "3", "4", "5", "6", "7" }),
                        new { @class = "form-control", placeholder = "Trial Offered" })
                            @Html.ValidationMessageFor(model => model.TrailOffered)
                        </div>

                        <div class="form-group col-md-4">
                            <label>Trail Date :</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(model => model.TrailDate, new { @class = "form-control pull-right", @type = "date" })
                                @Html.ValidationMessageFor(model => model.TrailDate)
                            </div>
                            <!-- /.input group -->
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">How did you know about us ?</label>
                            @Html.DropDownListFor(model => model.HowDidYouKnow,
                        new SelectList(new List<string> { "--Select--", "Other", "News Paper", "Relatives or friends", "Word of mouth", "Advertisement" }),
                        new { @class = "form-control", placeholder = "First Name" })
                            @Html.ValidationMessageFor(model => model.HowDidYouKnow)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Received By</label>
                            @Html.DropDownListFor(model => model.RecievedBy, new SelectList(ViewBag.Representatvie), "Please select", new { @class = "form-control", placeholder = "Received By" })
                            @Html.ValidationMessageFor(model => model.RecievedBy)
                        </div>

                        <div class="form-group col-md-4">
                            <label for="exampleInputEmail1">Notes</label>
                            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", placeholder = "Notes" })
                            @Html.ValidationMessageFor(model => model.Notes)
                        </div>

                        <div class="form-group col-md-4">
                            <h3>Followup Mode</h3>
                            <label>@Html.CheckBoxFor(model => model.SMS) SMS</label>
                            <label> @Html.CheckBoxFor(model => model.call) Call</label>
                            <label> @Html.CheckBoxFor(model => model.Email) Email</label>
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-default pull-right">Reset</button>
                            <button type="submit" class="btn btn-info pull-right" style="margin-right: 10px;">Save</button>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>




