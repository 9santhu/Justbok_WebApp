<div class="modal fade" id="modal-branch">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Branch</h4>
            </div>
            <div class="modal-body">
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Branch Id</label>
                    <input type="text" class="form-control" placeholder="Branch Id" id="txtBranchID" readonly />
                </div>

                <div class="form-group col-md-6" >
                    <label for="exampleInputEmail1">Gym Id</label>
                    <input type="text" class="form-control" placeholder="Gym Id" id="txtGymId" readonly />
                </div>

                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Branch Code</label>
                    <input type="text" class="form-control" placeholder="Branch Code" id="txtBranchCode" />
                </div>

                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Branch Name</label>
                    <input type="text" class="form-control" placeholder="Branch Name" id="txtBranchName" />
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1"> Address</label>
                    <input type="text" class="form-control" placeholder="Branch Address" id="txtBranchAddress" />
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">Phone Number</label>
                    <input type="text" class="form-control" placeholder="Phone Number" id="txtBranchPhoneNumber" />
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">City</label>
                    <input type="text" class="form-control" placeholder="City" id="txtCity" />
                </div>
                <div class="form-group col-md-6">
                    <label for="exampleInputEmail1">State</label>
                    <input type="text" class="form-control" placeholder="State" id="txtState" />
                </div>

                <div class="box-footer">
                    <button type="button" class="btn btn-default pull-right" id="closepage" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info pull-right" style="margin-right: 10px;" id="btSaveBranch">Save</button>
                </div>
                

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="bootbox modal fade in" role="dialog" id="modal_Conformation">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Confirmation !</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">Are you sure want to delete?</div>
                <input id="txtBranchId" class="" type="hidden">
            </div>
            <div class="modal-footer">
                <button data-bb-handler="success" type="button" class="btn btn-success btn-flat" id="btnYes">Yes</button>
                <button data-bb-handler="danger" type="button" class="btn btn-danger btn-flat" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

